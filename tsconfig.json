{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noLib": false,
    "lib": ["dom.iterable", "es2017"],
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib"
  },

  "include": [
    "*.tsx",
    "test/**/*.test.tsx"
  ]
}
