{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint:latest", "tslint-react"],

  "jsRules": {
    "max-line-length": [true, 200],
    "trailing-comma": [true, { "multiline": "never", "singleline": "never" }],
    "quotemark": [true, "single", "jsx-double", "avoid-escape"],
    "object-literal-sort-keys": false,
    "no-console": false,
    "variable-name": [true, "ban-keywords"]
  },

  "rules": {
    "deprecation": true,
    // Copy-pasted from Blueprint, see https://github.com/palantir/blueprint/blob/d5a6c02e8750415dfe3af9846749f50525e9a95b/tslint.json
    "ban": [
      true,
      ["Object", "assign", "use TS2.1 object spread { ...a, ...b }"],
      ["Object", "getOwnPropertyNames", "use Object.keys()"],
      ["describe", "only"],
      ["it", "only"]
    ],
    "jsx-wrap-multiline": false,
    "linebreak-style": [true, "LF"],
    "no-invalid-this": [true, "check-function-in-method"],
    "variable-name": [true, "ban-keywords"],

    // Overwriting rules

    "indent": [true, "spaces", 2],
    "array-type": false,
    "quotemark": [true, "single", "jsx-double", "avoid-escape"],
    "max-line-length": [true, 200],
    "interface-name": false,
    "member-access": false,
    "object-literal-sort-keys": false,
    "trailing-comma": [true, { "multiline": "never", "singleline": "never" }],
    "ordered-imports": false,
    "comment-format": false,
    "arrow-parens": false,
    "no-submodule-imports": false,
    "max-classes-per-file": false,
    "no-consecutive-blank-lines": false,
    "no-empty-interface": false,
    "no-console": false,
    "interface-over-type-literal": false,
    "member-ordering": false,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      //"check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "no-empty": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "curly": [true, "ignore-same-line"],

    "jsx-alignment": false,
    "jsx-no-bind": false, // FIXME Perf
    "jsx-boolean-value": false,
    "jsx-no-lambda": false, // FIXME Perf
    "jsx-no-multiline-js": false,

    // Does not search inside the dependency graph
    "no-implicit-dependencies": false,

    "no-this-assignment": [true, { "allow-destructuring": true }],

    // See [Rule to enforce semicolons after bound class methods](https://github.com/palantir/tslint/issues/3216#issuecomment-330591415)
    "semicolon": [true, "always", "strict-bound-class-methods"]
  }
}
